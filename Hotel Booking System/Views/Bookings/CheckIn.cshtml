                </div>
            </div>

            @Html.LabelFor(model => model.IsCustomerFromBooking, "Use this customer? (Checking this will remove the data below on check-in)", htmlAttributes: new { @class = "control-label col-md-8" })
            <div class="col-md-4 text-field">
