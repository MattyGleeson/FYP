}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script type="text/javascript">

    $(function () {
        $("#IsCustomerFromBooking").click(function () {
            if ($(this).is(':checked')) {
                $("#guestForm").show();
            }
            else {
                $("#guestForm").hide();
            }
        });
    });

</script>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
