@model Hotel_Booking_System.View_Models.BookingDetailsVM

@{
    ViewBag.Title = "Cancel";
}

<h2>Cancel</h2>

<h3>Are you sure you want to cancel this?</h3>
<div>
    <h4>Booking</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Created
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>

        <dt>
            From
        </dt>

        <dd>
            @Html.DisplayFor(model => model.From)
        </dd>

        <dt>
            To
        </dt>

        <dd>
            @Html.DisplayFor(model => model.To)
        </dd>

        <dt>
            Total
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Total)
        </dd>

        <dt>
            Payment Made
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PaymentMade)
        </dd>

        <dt>
            No. Rooms
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoRooms)
        </dd>

    </dl>

    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Floor
            </th>
            <th>
                Band
            </th>
            <th>
                Price(£)
            </th>
            <th>
                Type
            </th>
        </tr>

        @foreach (var item in Model.Rooms)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Hotel.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelFloor.no)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomBand.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomPrice.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomType.name)
                </td>
            </tr>
        }
    </table>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="button" value="Back" class="btn btn-default" onclick="location.href='@Url.Action("Details", new { id = Model.ModelId })'" />
            <input type="submit" value="Delete" style="float:right" class="btn btn-danger" />
        </div>
    }
</div>
