@model Hotel_Booking_System.Models.Booking

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Booking</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.customer_id, "Customer", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("customer_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.customer_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.startDate, "Start", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label class="col-md-2 text-field">@ViewBag.start_date</label>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.endDate, "End", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label class="col-md-2 text-field">@ViewBag.end_date</label>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.paymentTotal, "Total", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label class="col-md-2 text-field">@ViewBag.total</label>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.comments, "Comments", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.comments, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.comments, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <table class="table">
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Floor
                        </th>
                        <th>
                            Band
                        </th>
                        <th>
                            Price(£)
                        </th>
                        <th>
                            Type
                        </th>
                        <th></th>
                    </tr>

                    @foreach (Hotel_Booking_System.Models.Room item in ViewBag.rooms)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Hotel.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HotelFloor.no)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoomBand.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoomPrice.price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoomType.name)
                            </td>
                            <td>
                                <input type="button" value="Remove" class="btn btn-danger" onclick="location.href='@Url.Action("RemoveRoomFromCart", new { id = item.id })'" />
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        <input type="button" value="Home" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Home")'" />
        <input type="submit" value="Payment" style="float: right" class="btn btn-primary" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
