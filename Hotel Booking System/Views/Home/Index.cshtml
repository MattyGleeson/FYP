@model Hotel_Booking_System.View_Models.HomeDatePickerVM
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>HOTEL BOOKING SYSTEM</h1>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("Index", "Rooms"))
        {
            <div>
                <label class="control-label col-md-3">Start Date</label>
                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", @style = "display: inline-block;" } })
            </div><br />
            <div>
                <label class="control-label col-md-3">End Date</label>
                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })
            </div><br />
            <div>
                <label class="control-label col-md-3">Room Type</label>
                @Html.DropDownList("RoomTypeId", null, "Select room type", htmlAttributes: new { @class = "form-control" })
            </div><br />
            <input type="submit" value="Search Rooms" class="btn btn-primary search-button" />
        }
    </div>
</div>