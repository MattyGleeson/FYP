@model Hotel_Booking_System.Models.Room

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Hotel
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hotel.name)
        </dd>

        <dt>
            Floor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HotelFloor.no)
        </dd>

        <dt>
            Room Band
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoomBand.name)
        </dd>

        <dt>
            Price
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoomPrice.price)
        </dd>

        <dt>
            Room Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoomType.name)
        </dd>

        <dt>
            Additional Notes
        </dt>

        <dd>
            @Html.DisplayFor(model => model.additionalNotes)
        </dd>

    </dl>

    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th></th>
            </tr>

            @foreach (Hotel_Booking_System.Models.Facility item in ViewBag.facilities)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        <input type="button" value="Remove" class="btn btn-danger" onclick="location.href='@Url.Action("RemoveFacilityFromRoom", new { id = Model.id, facilityId = item.id })'" />
                    </td>
                </tr>
            }
        </table>
    </div>

</div>
<p>
    @Html.ActionLink("Add Facility", "AddFacility", new { id = Model.id }) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
