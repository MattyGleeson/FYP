@model IEnumerable<Hotel_Booking_System.Models.Room>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Back", "Index", "Admin") | @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Hotel
        </th>
        <th>
            Floor
        </th>
        <th>
            Room Band
        </th>
        <th>
            Price
        </th>
        <th>
            Room Type
        </th>
        <th>
            Notes
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Hotel.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HotelFloor.no)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomBand.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomPrice.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomType.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.additionalNotes)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
